<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_search_result_icon"
        android:layout_width="@dimen/dp_75"
        android:layout_height="@dimen/dp_75"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_store_name"
        android:layout_width="@dimen/dp_180"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:lines="1"
        android:text="水果店"
        android:textColor="@color/text3"
        app:layout_constraintVertical_chainStyle="packed"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toTopOf="@+id/iv_store_score"
        app:layout_constraintStart_toEndOf="@+id/iv_search_result_icon"
        app:layout_constraintTop_toTopOf="@+id/iv_search_result_icon" />

    <TextView
        android:id="@+id/tv_delivery_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginEnd="@dimen/dp_15"
        android:text="起送20"
        android:textColor="@color/text6"
        android:textSize="@dimen/sp_13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_search_result_icon" />

    <ImageView
        android:id="@+id/iv_store_score"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_8"
        android:src="@mipmap/single_star"
        app:layout_constraintBottom_toTopOf="@+id/tv_address"
        app:layout_constraintStart_toStartOf="@id/tv_store_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_store_name" />

    <TextView
        android:id="@+id/tv_store_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_6"
        android:text="4.7"
        android:textColor="@color/text_star"
        android:textSize="@dimen/sp_8"
        app:layout_constraintBottom_toBottomOf="@+id/iv_store_score"
        app:layout_constraintStart_toEndOf="@id/iv_store_score"
        app:layout_constraintTop_toTopOf="@+id/iv_store_score" />

    <TextView
        android:id="@+id/tv_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_9"
        android:text="月售666单"
        android:textColor="@color/text9"
        android:textSize="@dimen/sp_11"
        app:layout_constraintBottom_toBottomOf="@+id/iv_store_score"

        app:layout_constraintStart_toEndOf="@id/tv_store_score"
        app:layout_constraintTop_toTopOf="@+id/iv_store_score" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:text="地址：合肥市合肥市"
        android:textColor="@color/text6"
        android:textSize="@dimen/sp_13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/iv_store_score"
        app:layout_constraintTop_toBottomOf="@+id/iv_store_score" />
</android.support.constraint.ConstraintLayout>