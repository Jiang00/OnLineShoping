<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_empty_address"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_marginTop="@dimen/dp_45"
        android:src="@mipmap/empty_address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_35"
        android:gravity="center"
        android:text="@string/empty_address"
        android:textColor="@color/text9"
        android:textSize="@dimen/sp_15"
        app:layout_constraintEnd_toEndOf="@id/iv_empty_address"
        app:layout_constraintStart_toStartOf="@id/iv_empty_address"
        app:layout_constraintTop_toBottomOf="@+id/iv_empty_address" />
</android.support.constraint.ConstraintLayout>