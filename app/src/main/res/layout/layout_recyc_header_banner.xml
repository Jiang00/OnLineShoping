<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/store_banner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:banner_indicatorGravity="bottom|center_horizontal"
        app:banner_pageChangeDuration="1000"
        app:banner_pointAutoPlayInterval="4000"
        app:banner_pointContainerBackground="@color/transparent"
        app:banner_pointTopBottomMargin="@dimen/dp_5"
        app:banner_tipTextColor="@color/transparent"
        app:layout_constraintDimensionRatio="345:151"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>